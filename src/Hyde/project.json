{
   "title": "TechSmith.Hyde",
   "name":  "TechSmith.Hyde",
   "version": "9.0.0-alpha001",
   "description": "Object to Entity mapper for Windows Azure",
   "copyright": "Copyright TechSmith Corporation 2016",
   "authors": [ "TechSmith Corporation" ],
   "packOptions": {
      "owners": [ "TechSmith Corporation" ],
      "licenseUrl": "https://raw.github.com/TechSmith/hyde/master/LICENSE.txt",
      "projectUrl": "http://techsmith.github.com/hyde",
      "tags": [ "TechSmith", "Azure", "Storage", "Table Storage", "Azure Table" ],
      "files": [ "..\\..\\LICENSE.txt" ],
      "releaseNotes": "* (9.0.0-alpha001) Added .net core 1.0 support. Lowest .net framework supported is now .net 4.5. Removed methods previously marked as obsolete and removed all synchronous methods."
   },

   "buildOptions": {
      "warningsAsErrors": true
   },

   "dependencies": {
      "Microsoft.Data.Edm": "5.7.0",
      "Microsoft.Data.OData": "5.7.0",
      "Microsoft.Data.Services.Client": "5.7.0",
      "NETStandard.Library": "1.6.0",
      "Newtonsoft.Json": "9.0.1",
      "System.Spatial": "5.7.0",
      "WindowsAzure.Storage": "7.1.3-preview"
   },

   "frameworks": {
      "net45": {
         "frameworkAssemblies": {
            "System.Xml":  "4.0.0.0" 
         }
      },
      "netstandard1.6": {
         "imports": [
            "dnxcore50",
            // import of portable-net451+win8 is needed to reference System.Runtime.InteropServices.PInvoke
            "portable-net451+win8"
         ],
         "dependencies": {
            "System.Dynamic.Runtime": "4.0.11",
            "System.Linq.Expressions": "4.1.0",
            "System.Runtime": "4.1.0",
            "System.Runtime.Extensions": "4.1.0",
            // System.Runtime.InteropServices.PInvoke is needed to allow DateTimeOffset to parse without blowing up. Hopefully this is fixed in the framework soon
            "System.Runtime.InteropServices.PInvoke": "4.0.0-rc2-24027",
            "System.Security.Cryptography.Algorithms": "4.2.0"
         }
      }
   }
}
